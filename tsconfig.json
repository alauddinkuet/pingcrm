{
    "compilerOptions": {

        "target": "es2016",
        "jsx": "preserve",
        "module": "commonjs",
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.d.ts", "resources/js/**/*.vue"]
}
